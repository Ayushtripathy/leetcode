class Solution {
    public int arrangeCoins(int n) {
//         long h = n*8;
//         // System.out.println();
//         System.out.println((Math.sqrt(1+ h)));
//         int ans =(int) (((Math.sqrt(1+ h)) -1)/2);
        
//         // if( ans*(ans+1)/2 == n ){
//         //     return ans;
//         // }
        
//         return ans;
        int t = n;
        for (int i = 1; i <= t; i++) {
            n -= i;
            if (n < 0) return i - 1;
        }
        return t;
    }
}
